generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  passwordHash String  @map("password_hash")
  name        String?
  createdAt   DateTime @default(now()) @map("created_at")
  incidents   Incident[] @relation("user_incidents")
}

model Incident {
  id         String  @id @default(uuid())
  userId     String? @map("user_id")
  type       String
  description String?
  createdAt  DateTime @default(now()) @map("created_at")
  severity   Int     @default(1)
  approved   Boolean @default(false)
  // we store lat & lng separately for convenience in Prisma
  lat        Float?
  lng        Float?
  @@map("incidents")
}
