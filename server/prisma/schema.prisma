generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model UserEmails {
  user_id String @id @default(uuid())
  email   String @unique
}

model UserPasswords {
  user_id       String @id @default(uuid())
  password_hash String
}

model UserNames {
  user_id String  @id @default(uuid())
  name    String?
}

model UserCreationTimes {
  user_id    String   @id @default(uuid())
  created_at DateTime @default(now())
}

model IncidentTypes {
  incident_id String @id @default(uuid())
  type        String
}

model IncidentDescriptions {
  incident_id String  @id @default(uuid())
  description String?
}

model IncidentLocations {
  incident_id String @id @default(uuid())
  latitude    Float?
  longitude   Float?
}

model IncidentSeverity {
  incident_id String @id @default(uuid())
  severity    Int
}

model IncidentApprovalStatus {
  incident_id String  @id @default(uuid())
  approved    Boolean @default(false)
}

/// User â†’ Incident relationship
model UserIncidentMap {
  user_id     String
  incident_id String
  id          String @id @default(uuid())
}

model NotificationUsers {
  id              String @id @default(uuid())
  user_id         String
  notification_id String
}

model NotificationTitles {
  notification_id String @id @default(uuid())
  title           String
}

model NotificationMessages {
  notification_id String @id @default(uuid())
  message         String
}

model NotificationTimes {
  notification_id String   @id @default(uuid())
  created_at      DateTime @default(now())
}

model Notifications {
  id      String @id @default(uuid())
  user_id String
  title   String
  message String
}
